<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <!-- <link rel="stylesheet" href="/styles/post.css" /> -->
    <link rel="stylesheet" href="/styles/header.css" />
    <link rel="stylesheet" href="/styles/newpost.css" />
    <title>New Post</title>
  </head>
  <body>
    <%- include('partials/_header') %>
    <section class="main">
      <div class="container">
        <form action="/newpost" method="POST">
          <div class="row">
            <div class="col-25">
              <label for="fname">    Title</label>
            </div>
            <div class="col-75">
              <input type="text" id="fname" name="Title" placeholder="Title...">
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="exUrl">    External Url</label>
            </div>
            <div class="col-75">
              <input type="text" id="exUrl" name="external_url" placeholder="External Url..">
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="Image">    Image Url</label>
            </div>
            <div class="col-75">
              <input type="text" id="image" name="image" placeholder="Image Url..">
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="description">    Description</label>
            </div>
            <div class="col-75">
              <textarea id="description" name="description" placeholder="Write something.." style="height:200px"></textarea>
            </div>
          </div>
          <div class="row">
            <input type="submit" value="Post">
          </div>
        </form>
      </div>
    </section>
  </body>
</html>
